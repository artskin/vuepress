{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch":true,
    "baseUrl": ".",
    "noImplicitAny":false,
    "types": [
      "node",
      //"jest",
      //"webpack-env"
    ],
    "paths": {
      "@/*": [
        "docs/.vuepress/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "docs/.vuepress/**/*.ts", 
    "docs/.vuepress/**/*.vue",
    "docs/.vuepress/**/*.md", 
    "docs/.vuepress/config.js",
    "docs/packages/**/*.vue",
    "docs/packages/**/*.md", 
    "docs/.vuepress/theme/components/TestTmpl.vue", 
    "docs/*.md"
  ],
  "exclude": [
    "node_modules"
  ]
}
