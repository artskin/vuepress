@media (max-width: 719px) {
	.navbar{
		height:2.8rem;
		line-height: 1.4rem;
		background:#fff;
		box-shadow: 0 0 5px rgba(0,0,0,0.2);
		width: 100%;
		box-sizing: border-box;
		.sidebar-button {
			display: block;
			width: 1rem;
			height: 1rem;
			top: .3rem;
			left: .5rem;
			.icon{
				width: 1rem;
				height: 1rem;
			}
		}
		
		.links{
			background-color: transparent;
			position: absolute;
			top: .3rem;
			font-size: .92rem;
			right :0.7rem;
			padding-left: 0;
		}
		.site-name{
			font-size:.9rem;
		}
		.search-box{
			input{
				left: 0;
				&:focus{
					left: 0;
				}
			}
		}
	}
	.sidebar {
		top: 2.8rem;
		padding-top: 0;
		box-shadow: 0 10px 10px rgba(0,0,0,.2);
		z-index 20;
		transform: translateX(-115%);
		border: none;
	}
	.sidebar-mask{
	background: rgba(0,0,0,.1)
	}
}
@media (max-width: 419px) {
	.content:not(.custom){
		padding: .8rem;
	}
	.content div[class*="language-"]{
		margin: 0.85rem -.4rem;
		border-radius: 3px;
	}
	div[class*="language-"] pre, 
	div[class*="language-"] pre[class*="language-"]{
		background-color: #093444
	}
}
